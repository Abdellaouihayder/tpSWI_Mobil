<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up"
    android:background="@color/black">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:padding="10sp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textColor="@color/bnb"
        android:textSize="22sp"
        android:text="welcome to Binance \nthe Best website \nof trading
\ntrade here and earn 100%"
        />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-16dp"
        android:src="@drawable/img_1" />
</RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:textStyle="bold"
    android:textColor="@color/bnb"
    android:textSize="30sp"
    android:text="sign up"
    android:layout_gravity="center"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/shape"
           android:layout_margin="20sp"
           android:padding="15sp"
           >
           <EditText
               android:id="@+id/textup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="full name"
               android:textColorHint="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               android:inputType="text"
               android:layout_margin="10sp"
               android:drawableEnd="@drawable/persone"
               android:drawableTint="@color/bnb"
               android:textColor="@color/white"
               />
           <EditText
               android:id="@+id/emailup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Email"
               android:textColorHint="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               android:inputType="textEmailAddress"
               android:layout_margin="10sp"
               android:drawableEnd="@drawable/email"
               android:drawableTint="@color/bnb"
               android:textColor="@color/white"

               />
           <EditText
               android:id="@+id/phoneup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Phone"
               android:textColorHint="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               android:inputType="numberDecimal"
               android:layout_margin="10sp"
               android:drawableEnd="@drawable/phone"
               android:drawableTint="@color/bnb"
               android:textColor="@color/white"

               />
           <EditText
               android:id="@+id/pswup"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Password"
               android:textColorHint="@color/white"
               android:textSize="15sp"
               android:textStyle="bold"
               android:inputType="textPassword"
               android:layout_margin="10sp"
               android:drawableEnd="@drawable/psw"
               android:drawableTint="@color/bnb"
               android:textColor="@color/white"
               />
           <EditText
           android:id="@+id/confirmup"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Confirm Password"
           android:textColorHint="@color/white"
           android:textSize="15sp"
           android:textStyle="bold"
           android:inputType="textPassword"
           android:layout_margin="10sp"
           android:drawableEnd="@drawable/psw"
           android:drawableTint="@color/bnb"
           android:textColor="@color/white"
 />
       </LinearLayout>
       <Button
           android:id="@+id/btnup"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Sign up"
           android:layout_gravity="center"
           android:backgroundTint="@color/bnb"
           android:textColor="@color/black"
           />
       <TextView
           android:id="@+id/gotosignIn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Already have account"
           android:textStyle="bold"
           android:textColor="@color/bnb"
           android:textSize="16sp"
           android:layout_gravity="center"
           android:layout_marginTop="10sp"
           />
   </LinearLayout>

</ScrollView>